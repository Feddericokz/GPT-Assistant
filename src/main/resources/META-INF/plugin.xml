<!-- Plugin Configuration File. Read more: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <id>com.github.feddericokz.gptassistant</id>
    <name>GPT-Assistant Template</name>
    <vendor>feddericokz</vendor>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.java</depends>

    <actions>
        <!-- Define the submenu group -->
        <group id="GPTAssistantGroup" text="GPT Assistant" description="GPT Assistant options" popup="true">
            <add-to-group group-id="EditorPopupMenu" anchor="last" />
        </group>

        <group id="SrDev" text="Senior Dev" description="Senior Developer behavior." popup="true">
            <action id="sr_dev_process_selection_gpt3" class="com.github.feddericokz.gptassistant.actions.SeniorDevGpt3ProcessSelectionAction" text="GPT-3: Process Selected Code" description="Make GPT3 process selected code."/>
            <action id="sr_dev_process_selection_gpt4" class="com.github.feddericokz.gptassistant.actions.SeniorDevGpt4ProcessSelectionAction" text="GPT-4: Process Selected Code" description="Make GPT4 process selected code."/>
            <add-to-group group-id="GPTAssistantGroup" anchor="last" />
        </group>
    </actions>

    <extensions defaultExtensionNs="com.intellij">
        <applicationConfigurable
                parentId="tools"
                instance="com.github.feddericokz.gptassistant.configuration.AssistantConfiguration"
                id="com.github.feddericokz.gptassistant.configuration.AssistantConfiguration"
                displayName="GPT Assistant Settings"/>

        <toolWindow id="GPTAssistant"
                    anchor="bottom"
                    factoryClass="com.github.feddericokz.gptassistant.ui.components.GPTAssistantToolWindowFactory"/>
    </extensions>

    <extensions defaultExtensionNs="com.intellij">
        <notificationGroup id="GPTAssistantNotificationGroup"
                           displayType="BALLOON"
                           toolWindowId="GPTAssistantToolWindow"/>
    </extensions>

</idea-plugin>
